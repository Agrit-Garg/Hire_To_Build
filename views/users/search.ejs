        <!-- Filter Table -->
        <section class="container">

          <table class="table table-light">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Work Field</th>
                <th scope="col">State</th>
                <th scope="col">City</th>
                <th scope="col">View</th>

              </tr>
            </thead>
            <tbody>
              <!-- <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
              </tr> -->
              <%
                if(users.length > 0){
                  for(let i=0;i<users.length;i++){
                    %>
                    <tr>
                      <td><%= users[i].name %></td>
                      <td><%= users[i].workfield %></td>
                      <td><%= users[i].state %></td>
                      <td><%= users[i].city %></td>
                      <td><a href="/viewpage?id=<%=users[i]._id%> " class="btn btn-sm btn-success">VIEW</a></td>


                    </tr>
                    <%
                  }
                }
                else{
                  %>
                  <tr>
                    <td>Data Not Found</td>
                  </tr>
                  <%
                }


              %>


            </tbody>
          </table>
        </section>
      
      
