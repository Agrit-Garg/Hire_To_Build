      <!-- Search Form -->
        <section class="vh-100" style="background-color: #FFC107;">
          <div class="container py-5 ">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                  <div class="row g-0">
                    <div class="col-md-6 col-lg-5 d-none d-md-block">
                        <img src="../public/stylesheet/images/login.jpg"
                          alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                      </div>
                    <div class="col-md-6 col-lg-7 d-flex align-items-center">
                      <div class="card-body p-4 p-lg-5 text-black">
                        <form method="POST">
        
                          <div class="d-flex align-items-center mb-3 pb-1">
                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                            <span class="h1 fw-bold mb-0">Search</span>
                          </div>
        
                          <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
        
                          <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example17">Workfield</label>
                            <select class="form-select" name="qwork" aria-label="Default select example" required>
                                <option selected>Select Workfield</option>
                                <option value="General Contractor">General Contractor</option>
                                <option value="Carpenter">Carpenter</option>
                                <option value="Electrician">Electrician</option>
                                <option value="Plumber">Plumber</option>
                                <option value="Painter">Painter</option>
                                <option value="Roofer">Roofer</option>
                                <option value="Mason">Mason</option>
                                <option value="Drywall Installer">Drywall Installer</option>
                                <option value="Flooring Specialist">Flooring Specialist</option>
                                <option value="Landscaper">Landscaper</option>
                                <option value="HVAC Technician">HVAC Technician</option>
                                <option value="Windows and Door Installer">Windows and Door Installer</option>
                                <option value="Carpenter Assistant">Carpenter Assistant</option>
                                <option value="Demolition Specialist">Demolition Specialist</option>
                                <option value="Concrete Finisher">Concrete Finisher</option>
                                <option value="Excavator">Excavator</option>
                                <option value="Insulation Specialist">Insulation Specialist</option>
                                <option value="Tiler">Tiler</option>
                                <option value="Land Surveyor">Land Surveyor</option>
                                <option value="Structural Engineer">Structural Engineer</option>
                                <option value="Architect">Architect</option>
                                <option value="Interior Designer">Interior Designer</option>
                                <option value="Kitchen and Bathroom Remodeler">Kitchen and Bathroom Remodeler</option>
                                <option value="Lighting and Electrical Designer">Lighting and Electrical Designer</option>
                                <option value="Surveyor Assistant">Surveyor Assistant</option>
                            </select>
                          </div>
        
                          <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example17">Country</label>
                            <select class="form-select" name="qcountry" id="country" aria-label="Default select example">
                                <option selected>Select Country</option>
                            </select>
                          </div>
                          <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example17">State</label>
                            <select class="form-select" name="qstate" id="state" aria-label="Default select example">
                                <option selected>Select State</option>
                            </select>
                          </div>
                          <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example17">City</label>
                            <select class="form-select" name="qcity" id="city" aria-label="Default select example">
                                <option selected>Select City</option>
                                <option value="">Select City</option>

                            </select>
                          </div>
        
                          <div class="pt-1 mb-4">
                            <button class="btn btn-warning btn-lg btn-block" type="submit" value="search">Search</button>
                          </div>
                              
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
