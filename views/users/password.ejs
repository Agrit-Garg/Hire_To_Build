<body>
    <section class="vh-100" style="background-color: #FFC107;">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
              <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
                  <div class="col-md-6 col-lg-5 d-none d-md-block">
                    <img src="../public/stylesheet/images/login.jpg"
                      alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                  </div>
                 
                  <div class="col-md-6 col-lg-7 d-flex align-items-center">
                    <div class="card-body p-4 p-lg-5 text-black">
                      <form method="POST" action="">
      
                        <div class="d-flex align-items-center mb-3 pb-1">
                          <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                          <span class="h1 fw-bold mb-0">Setting Up New Password</span>
                        </div>
      
                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Dont Worry Just Chill! Fill details below</h5>
          
                        <%
                        if(typeof message != 'undefined')
                        {
                            %>
                                <h5 style="color: red;"><%=message%>!!</h5>
                            <%
    
                        }
                        %> <br>
      

                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example27">Set Password</label>
                            <input type="password" name="password" id="form2Example27" class="form-control form-control-lg" />
                            <input type="hidden" name="user_id" value="<%=user_id%>">
                        </div>
<!-- 
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example27">Confirm Password</label>
                            <input type="password" name="password" id="form2Example27" class="form-control form-control-lg" />
                        </div> -->

                        
      
                        <div class="pt-1 mb-4">
                          <button class="btn btn-warning btn-lg btn-block" type="submit" value="Login">SUBMIT</button>
                        </div>
      
                        <!-- <a class="small text-muted" href="#!">Forgot password?</a>
                        <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="/register"
                            style="color: #393f81;">Register here</a></p> -->
                            
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    
